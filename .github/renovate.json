{
  "extends": [
    "config:base",
    ":ignoreUnstable",
    ":reviewer(natalia-umka)"
  ],
  "platform": "github",
  "groupName": "all",
  "onboarding": true,
  "requireConfig": "optional",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "commitBodyTable": true,
  "prBody": "This pull request contains updates for all packages.",
  "flux": {
    "fileMatch": ["infra/.*"]
  },
  "helm-values": {
    "fileMatch": ["infra/.*"]
  },
  "kubernetes": {
    "fileMatch": ["infra/.+\\.yaml$"]
  },
  "reviewers": [
    "natalia-umka"
  ],
  "packageRules": [
    {
      "description": "lockFileMaintenance",
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "minor",
        "major",
        "lockFileMaintenance"
      ],
      "dependencyDashboardApproval": false,
      "stabilityDays": 0
    }
  ]
}